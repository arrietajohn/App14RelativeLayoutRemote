<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="boton 1" />

    <Button
        android:id="@+id/boton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="boton 2" />

    <Button
        android:id="@+id/boton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/boton4"
        android:layout_below="@+id/boton1"
        android:layout_marginTop="285dp"
        android:layout_marginBottom="294dp"
        android:text="Boton 3" />

    <Button
        android:id="@+id/boton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="boton 4" />

    <Button
        android:id="@+id/boton5"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/boton8"
        android:layout_below="@+id/boton7"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="285dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="295dp"
        android:layout_toLeftOf="@id/boton6"
        android:layout_toRightOf="@id/boton3"
        android:text="boton 5" />

    <Button
        android:id="@+id/boton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/boton9"
        android:layout_below="@id/boton2"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="285dp"
        android:layout_marginBottom="294dp"
        android:text="boton 6" />

    <Button
        android:id="@+id/boton7"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="57dp"
        android:layout_toLeftOf="@+id/boton2"
        android:layout_toRightOf="@+id/boton1"
        android:text="boton 7" />

    <Button
        android:id="@+id/boton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/boton9"
        android:layout_toRightOf="@id/boton4"
        android:text="boton 8" />

    <Button
        android:id="@+id/boton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Boton 9" />
</RelativeLayout>